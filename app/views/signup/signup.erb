<h1 class="text-center">Signup</h1>
<hr />
<br />
<div class="row">		
		<form method="post" action="/signup" class="form-horizontal">
			<div  class="form-group form-group-lg">
			    <label class="col-sm-2 control-label" for="name">Full Name</label>
			    <div class="col-sm-3">
			    	<input type="text" class="form-control" name="full_name" placeholder="Full Name" value="" >
			    </div>	

			</div>
			<div  class="form-group form-group-lg">
			    <label class="col-sm-2 control-label" for="email">User Name</label>
			    <div class="col-sm-3">
			    	<input type="email" class="form-control" name="email" placeholder="Email" value="" >
			    </div>	

			</div>
			<div class="form-group form-group-lg">
			    <label class="col-sm-2 control-label" for="password">Passwrod</label>
			    <div class="col-sm-3">
			    	<input type="password" class="form-control" name="password" placeholder="Password" value="">
			    </div>	

			</div>
			<div class="form-group form-group-lg">
				<div class="col-sm-offset-2 col-sm-10">
				    <input type="submit" class="btn btn-primary btn-lg" value="Sign Up" >
				    <input type="reset" class="btn btn-warning btn-lg" value="Clear" >
				</div>   

			</div>

		</form>
			
	</div>	