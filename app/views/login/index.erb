<h1 class="text-center">The Songs - Login</h1>
<hr />
<br />
<% if login? %>
	<h1> Welcome !!</h1>
<% else %>
	<div class="row">		
		<form method="post" action="/login" class="form-horizontal">
			<div  class="form-group form-group-lg">
			    <label class="col-sm-2 control-label" for="email">User Name</label>
			    <div class="col-sm-3">
			    	<input type="email" class="form-control" name="email" placeholder="Email" value="" >
			    </div>	

			</div>
			<div class="form-group form-group-lg">
			    <label class="col-sm-2 control-label" for="password">Passwrod</label>
			    <div class="col-sm-3">
			    	<input type="password" class="form-control" name="password" placeholder="Password" value="">
			    </div>	

			</div>
			<div class="form-group form-group-lg">
				<div class="col-sm-offset-2 col-sm-10">
				    <input type="submit" class="btn btn-primary btn-lg" value="Login" >
				    <!-- <input type="reset" class="btn btn-warning btn-lg" value="Clear" > -->
				    <a class="btn btn-warning btn-lg" href="/signup">Signup</a>
				</div>   

			</div>

		</form>
			
	</div>	

<% end %>

