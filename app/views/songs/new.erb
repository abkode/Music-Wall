<h1>Add new song</h1>
<hr/>

<% if @songs.errors.any? %>
  <div>
    <strong>Some issues with your songs, please fix them:</strong>
    <ul>
      <% @songs.errors.full_message.each do |song| %>
        <li><%= song %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/songs" >
  <div class="form-group">
    <label for="exampleInputAuthor">Author</label>
    <input type="text" class="form-control" name="author" value="<%= @songs.author %>">
  </div>

  <div class="form-group">
    <label for="exampleInputSongTitle">Song Title:</label>
    <input type="text" class="form-control" name="song_title" value="<%= @songs.song_title %>">
  </div>

  <div class="form-group">
    <label for="exampleInputSongTitle">URL:</label>
    <input type="text" class="form-control" name="url" value="<%= @songs.url %>">
  </div>
  <div>
    <input type="submit" class="btn btn-primary" value="Submit" >
    <a class="btn btn-default" href="/logout">Logout </a>
  </div>
</form>
