<h5>Login as: <%= session[:full_name]  %></h5>
<hr />
<br />
<h1><%= @songs.song_title %></h1>

<blockquote >
	<p> Author: <%= @songs.author %> </p>
	<a href="<%= @songs.url  %>"><%= @songs.song_title %></a>
	<footer><%= @songs.upvotes.length %> vote(s)</footer>
</blockquote>
<hr />
<div class="row">		
		<form method="post" action="/review" class="form-horizontal">
			<div  class="form-group form-group-lg">
			    <div class="col-sm-3">
			    	<textarea class="form-control" rows="3" name="review" placeholder="Review"></textarea> 	
			    </div>	

			</div>
			<div  class="form-group form-group-lg">
			    <div class="col-sm-2">
			    	Rate:
			    	<select class="btn btn-default btn-lg dropdown-toggle" name="rating">
					  <option value="1">1</option>
					  <option value="2">2</option>
					  <option value="3">3</option>
					  <option value="4">4</option>
					  <option value="5">5</option>
					</select>
					<input type="hidden" name="user_id" value="<%= @songs.user.id %>" >
			    	<input type="hidden" name="song_id" value="<%= @songs.id %>" >
			    	<input type="submit" class="btn btn-default" value="submit" >	
			    	

			    </div>	

			</div>

			

		</form>		
</div>
<% @reviews.each do |review| %>
<blockquote >
		<p><%= review.review %> </p>
		<footer>by: <%= review.user.name %></footer>
		<% if current_user.id == review.user_id %>
			Delete post
		<% end %>


</blockquote>
<% end %> 
<hr/>
<a class="btn btn-success" href="/songs">Back to All songs</a>
<a class="btn btn-default" href="/logout">Logout </a>
